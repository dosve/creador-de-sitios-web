        // Agregar botón de prueba temporal para vista previa
        setTimeout(() => {
          const testButton = document.createElement('button');
          testButton.textContent = '🔄 Cargar Productos (Vista Previa)';
          testButton.style.cssText = 'position: fixed; top: 10px; right: 10px; z-index: 9999; background: #10B981; color: white; padding: 10px; border: none; border-radius: 5px; cursor: pointer;';
          testButton.onclick = () => {
            console.log('🧪 Botón de vista previa clickeado');
            loadRealProductsInPreview();
          };
          document.body.appendChild(testButton);
